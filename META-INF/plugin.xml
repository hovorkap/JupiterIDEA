<idea-plugin version="2">
    <name>JupiterIDEA-table</name>
    <description>Jupiter code review</description>
    <version>1.0</version>
    <vendor>JetBrains</vendor>
    <!--
    <idea-version since-build="8000"/>
    -->
    <application-components>
        <!-- Add your application components here -->
    </application-components>

    <project-components>

    </project-components>

    <actions>
        <!-- Add your actions here -->
    </actions>

    <extensions defaultExtensionNs="com.intellij">
       <projectService serviceImplementation="org.jupiter.idea.ui.ReviewsView"/>
        <projectService serviceInterface="org.jupiter.service.ReviewProvider"
                serviceImplementation="org.jupiter.service.ReviewProviderImpl"/>
        <!--<toolWindow id="Jupiter Review" secondary="true" anchor="bottom"-->
                    <!--factoryClass="org.jupiter.idea.ui.ReviewsToolWindowFactory"-->
                    <!--icon="/icons/jupiter.gif"/>-->
            <toolWindow id="Jupiter Review" secondary="true" anchor="bottom"
                    factoryClass="org.jupiter.idea.ui.CodeReviewToolWindowFactory"
                    icon="/icons/jupiter.gif"/>

    </extensions>
</idea-plugin>